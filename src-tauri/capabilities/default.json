{
  "$schema": "https://schemas.tauri.app/capability/2",
  "identifier": "default",
  "description": "Default capabilities for MUN SDK AI V2",
  "windows": ["main"],
  "permissions": [
    "core:default",
    
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "adb", "cmd": "adb", "args": true },
        { "name": "python", "cmd": "python", "args": true },
        { "name": "python3", "cmd": "python3", "args": true },
        { "name": "reg", "cmd": "reg", "args": ["query", "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Cryptography", "/v", "MachineGuid"] }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "adb", "cmd": "adb", "args": true },
        { "name": "python", "cmd": "python", "args": true },
        { "name": "python3", "cmd": "python3", "args": true }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/.mun-sdk-ai-v2/**" },
        { "path": "$RESOURCE/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/.mun-sdk-ai-v2/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/.mun-sdk-ai-v2/**" },
        { "path": "$RESOURCE/**" }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/.mun-sdk-ai-v2/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/.mun-sdk-ai-v2/**" }
      ]
    },
    
    "notification:default",
    "notification:allow-notify",
    "notification:allow-request-permission",
    "notification:allow-is-permission-granted",
    
    "process:default",
    "window-state:default",
    "deep-link:default"
  ]
}
